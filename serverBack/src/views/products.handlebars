<h2 class="text-center p-5">PRODUCTS</h2>
<section class="d-flex flex-wrap justify-content-evenly ">
  {{#each products}}
   <div class="card my-2 " style="width: 18rem;">
    <img src="{{this.photo}}" class="card-img-top d-block mx-auto " alt="{{this.title}}" style="width: 15rem;">
    <div class="card-body ">
      <h5 class="card-title text-center my-3 ">{{this.title}}</h5>
      <p class="card-text text-center my-3 ">{{this.category}}</p>
      <a href="/products/{{this.id}}" class="btn btn-outline-primary d-block mx-auto my-3 w-50 ">+info</a>
    </div>
  </div>
  {{/each}}
</section>